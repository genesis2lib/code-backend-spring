{{#isPostgreSQL}}
databaseChangeLog:
  - changeSet:
      id: 001-create-{{module.name}}-user-table
      author: system
      comment: Create {{module.name}} user table with default and user-specific fields
      changes:
        - createTable:
            schemaName: {{module.name}}
            tableName: {{module.name}}_user
            columns:
              # Default system fields
              - column:
                  name: id
                  type: bigserial
                  constraints:
                    nullable: false
                    primaryKey: true
                    primaryKeyName: pk_{{module.name}}_user_id
                    generatedByDefault: true
              - column:
                  name: deleted
                  type: boolean
                  defaultValueBoolean: false
              - column:
                  name: delete_reason
                  type: text
              - column:
                  name: tenant_id
                  type: text
              - column:
                  name: created_at
                  type: BIGINT
                  defaultValueComputed: "EXTRACT(EPOCH FROM NOW()) * 1000"
              - column:
                  name: modified_at
                  type: BIGINT
                  defaultValueComputed: "EXTRACT(EPOCH FROM NOW()) * 1000"
              - column:
                  name: created_by
                  type: text
              - column:
                  name: modified_by
                  type: text
              - column:
                  name: slug
                  type: text
                  defaultValueComputed: "{{module.name}}.uuid_generate_v4()"
                  constraints:
                    nullable: false
                    unique: true
              # User-specific fields
              - column:
                  name: external_auth_provider
                  type: text
              - column:
                  name: external_auth_id
                  type: text
              - column:
                  name: picture
                  type: text
              - column:
                  name: email
                  type: text
              - column:
                  name: first_name
                  type: text
              - column:
                  name: last_name
                  type: text
              - column:
                  name: full_name
                  type: text
              - column:
                  name: roles
                  type: text
                  remarks: "Comma-separated list of roles for RBAC"
      rollback:
        - dropTable:
            schemaName: {{module.name}}
            tableName: {{module.name}}_user

  - changeSet:
      id: 002-create-{{module.name}}-user-indexes
      author: system
      comment: Create indexes for {{module.name}} user table
      changes:
        - createIndex:
            indexName: idx_{{module.name}}_user_email
            schemaName: {{module.name}}
            tableName: {{module.name}}_user
            columns:
              - column:
                  name: email
        - createIndex:
            indexName: idx_{{module.name}}_user_external_auth
            schemaName: {{module.name}}
            tableName: {{module.name}}_user
            columns:
              - column:
                  name: external_auth_provider
              - column:
                  name: external_auth_id
        - createIndex:
            indexName: idx_{{module.name}}_user_tenant
            schemaName: {{module.name}}
            tableName: {{module.name}}_user
            columns:
              - column:
                  name: tenant_id
        - createIndex:
            indexName: idx_{{module.name}}_user_deleted
            schemaName: {{module.name}}
            tableName: {{module.name}}_user
            columns:
              - column:
                  name: deleted
      rollback:
        - dropIndex:
            indexName: idx_{{module.name}}_user_email
            schemaName: {{module.name}}
        - dropIndex:
            indexName: idx_{{module.name}}_user_external_auth
            schemaName: {{module.name}}
        - dropIndex:
            indexName: idx_{{module.name}}_user_tenant
            schemaName: {{module.name}}
        - dropIndex:
            indexName: idx_{{module.name}}_user_deleted
            schemaName: {{module.name}}
{{/isPostgreSQL}}

