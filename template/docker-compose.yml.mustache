version: '3.8'

services:
{{#isPostgreSQL}}
  postgres:
    image: postgres:17-alpine
    container_name: {{module.name}}_postgres
    environment:
      POSTGRES_DB: {{module.name}}-db
      POSTGRES_USER: {{module.name}}-user
      POSTGRES_PASSWORD: {{module.name}}-pwd
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{module.name}}-user -d {{module.name}}-db"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/isPostgreSQL}}

{{#isMySQL}}
  mysql:
    image: mysql:8.0
    container_name: {{module.name}}_mysql
    environment:
      MYSQL_DATABASE: {{module.name}}-db
      MYSQL_USER: {{module.name}}-user
      MYSQL_PASSWORD: {{module.name}}-pwd
      MYSQL_ROOT_PASSWORD: {{module.name}}-root-pwd
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "{{module.name}}-user", "-p{{module.name}}-pwd"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/isMySQL}}

{{#isMariaDB}}
  mariadb:
    image: mariadb:10.11
    container_name: {{module.name}}_mariadb
    environment:
      MARIADB_DATABASE: {{module.name}}-db
      MARIADB_USER: {{module.name}}-user
      MARIADB_PASSWORD: {{module.name}}-pwd
      MARIADB_ROOT_PASSWORD: {{module.name}}-root-pwd
    ports:
      - "3306:3306"
    volumes:
      - mariadb_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "{{module.name}}-user", "-p{{module.name}}-pwd"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/isMariaDB}}

{{#isMongoDB}}
  mongodb:
    image: mongo:7.0
    container_name: {{module.name}}_mongodb
    environment:
      MONGO_INITDB_DATABASE: {{module.name}}-db
      MONGO_INITDB_ROOT_USERNAME: {{module.name}}-user
      MONGO_INITDB_ROOT_PASSWORD: {{module.name}}-pwd
    ports:
      - "27017:27017"
    volumes:
      - mongodb_data:/data/db
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/isMongoDB}}

{{#isRedis}}
  redis:
    image: redis:7.2-alpine
    container_name: {{module.name}}_redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
{{/isRedis}}

{{#isElasticsearch}}
  elasticsearch:
    image: elasticsearch:8.11.0
    container_name: {{module.name}}_elasticsearch
    environment:
      - discovery.type=single-node
      - xpack.security.enabled=false
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    ports:
      - "9200:9200"
      - "9300:9300"
    volumes:
      - elasticsearch_data:/usr/share/elasticsearch/data
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9200/_cluster/health"]
      interval: 30s
      timeout: 10s
      retries: 5
{{/isElasticsearch}}

{{#isCassandra}}
  cassandra:
    image: cassandra:4.1
    container_name: {{module.name}}_cassandra
    environment:
      - CASSANDRA_CLUSTER_NAME={{module.name}}-cluster
      - CASSANDRA_DC={{module.name}}-dc
      - CASSANDRA_RACK={{module.name}}-rack
    ports:
      - "9042:9042"
    volumes:
      - cassandra_data:/var/lib/cassandra
    healthcheck:
      test: ["CMD", "cqlsh", "-e", "describe keyspaces"]
      interval: 30s
      timeout: 10s
      retries: 5
{{/isCassandra}}

{{#isCouchbase}}
  couchbase:
    image: couchbase/server:7.2.0
    container_name: {{module.name}}_couchbase
    environment:
      - COUCHBASE_ADMINISTRATOR_USERNAME={{module.name}}-admin
      - COUCHBASE_ADMINISTRATOR_PASSWORD={{module.name}}-pwd
    ports:
      - "8091:8091"
      - "8092:8092"
      - "8093:8093"
      - "8094:8094"
      - "8095:8095"
      - "8096:8096"
    volumes:
      - couchbase_data:/opt/couchbase/var
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8091/pools/default"]
      interval: 30s
      timeout: 10s
      retries: 5
{{/isCouchbase}}

{{#isNeo4j}}
  neo4j:
    image: neo4j:5.15
    container_name: {{module.name}}_neo4j
    environment:
      - NEO4J_AUTH={{module.name}}-user/{{module.name}}-pwd
      - NEO4J_PLUGINS=["apoc"]
    ports:
      - "7474:7474"
      - "7687:7687"
    volumes:
      - neo4j_data:/data
      - neo4j_logs:/logs
    healthcheck:
      test: ["CMD", "cypher-shell", "-u", "{{module.name}}-user", "-p", "{{module.name}}-pwd", "RETURN 1"]
      interval: 30s
      timeout: 10s
      retries: 5
{{/isNeo4j}}

volumes:
{{#isPostgreSQL}}
  postgres_data:
    driver: local
{{/isPostgreSQL}}
{{#isMySQL}}
  mysql_data:
    driver: local
{{/isMySQL}}
{{#isMariaDB}}
  mariadb_data:
    driver: local
{{/isMariaDB}}
{{#isMongoDB}}
  mongodb_data:
    driver: local
{{/isMongoDB}}
{{#isRedis}}
  redis_data:
    driver: local
{{/isRedis}}
{{#isElasticsearch}}
  elasticsearch_data:
    driver: local
{{/isElasticsearch}}
{{#isCassandra}}
  cassandra_data:
    driver: local
{{/isCassandra}}
{{#isCouchbase}}
  couchbase_data:
    driver: local
{{/isCouchbase}}
{{#isNeo4j}}
  neo4j_data:
    driver: local
  neo4j_logs:
    driver: local
{{/isNeo4j}}